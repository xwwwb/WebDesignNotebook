.item {
    
    display: flex;
    height: 300rpx;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
    margin: 10rpx;
}

.shopList {
    padding: 10rpx;
}

.item view:nth-child(1) {
    flex: 2;
    padding: 10rpx;
    margin: 5rpx;
}

.item view:nth-child(1) image {
    width: 100%;
    height: 100%;
}

.item view:nth-child(2) {
    flex: 3;
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.item view:nth-child(2) text {
    font-size: 24rpx;
}
.shop-title{
    font-weight: bold;
}